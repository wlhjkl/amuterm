<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amuterm.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </TabWidget>
        
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
    
            <LinearLayout
                android:id="@+id/tab1"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
            
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="channel:" />
                    
                    <Spinner
                        android:id="@+id/spinnerChannelType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    
                    <Button
                        android:id="@+id/buttonConnect"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/button_connect" />
                    
                    <Button
                        android:id="@+id/buttonDisconnect"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="@string/button_disconnect" />
                    
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/layoutChannelUsb"
                    android:visibility="gone"
			        android:orientation="horizontal"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content" >
			
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="USB:" />
			
                    <Spinner
                        android:id="@+id/spinnerSerialPorts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    
                    <Button
                        android:id="@+id/buttonUsbReload"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/button_usb_reload" />
                    
                    <Spinner
                        android:id="@+id/spinnerSerialBauds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    <Spinner
                        android:id="@+id/spinnerSerialParity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    <Spinner
                        android:id="@+id/spinnerSerialStops"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
			        			
			    </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/layoutChannelSocket"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
            
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Socket:" />
			        <EditText
			            android:id="@+id/textSocketAddr"
			            android:layout_width="0dp"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			            android:ems="16"
			            android:inputType="number|numberDecimal"
			            android:digits="0123456789." />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":" />
                    <EditText
                        android:id="@+id/textSocketPort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:inputType="number" />
			        
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/layoutChannelBluetooth"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
            
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bluetooth:" />
                    
                    <Spinner
                        android:id="@+id/spinnerBluetoothPorts"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    
                    <Button
                        android:id="@+id/buttonBluetoothReload"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/button_bluetooth_reload" />
                </LinearLayout>
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@android:color/darker_gray"/>
                
            </LinearLayout>
            
            
            <LinearLayout
                android:id="@+id/tab2"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textCommStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
                
                <LinearLayout
                    android:id="@+id/layoutTxOptions"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                
	                <CheckBox
	                    android:id="@+id/checkTxCr"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="CR" />
                    <CheckBox
                        android:id="@+id/checkTxLf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LF" />
                    <CheckBox
                        android:id="@+id/checkTxHex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0x" />
                     	                 
                    <Button
                        android:id="@+id/buttonTxClear"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="clr" />
                    <Button
                        android:id="@+id/buttonTxSend"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="send" />
                </LinearLayout>
                
                <EditText
                    android:id="@+id/textTx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:minLines="2"
                    android:maxLines="2"
                    android:scrollbars="vertical" />

                <LinearLayout
                    android:id="@+id/layoutRxOptions"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                
	                <TextView
	                    android:id="@+id/textRxLine"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="0" />
                    <CheckBox
                        android:id="@+id/checkRxCr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CR" />
                    <CheckBox
                        android:id="@+id/checkRxLf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LF" />
                    <CheckBox
                        android:id="@+id/checkRxHex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0x" />
                    <Button
                        android:id="@+id/buttonRxClear"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="clr" />
                    <Button
                        android:id="@+id/buttonRxSave"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="save" />
                </LinearLayout>
                
                <EditText
                    android:id="@+id/textRx"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:inputType="textMultiLine"
                    android:minLines="4"
                    android:scrollbars="vertical"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:textIsSelectable="true"
                    android:focusableInTouchMode="false" />
                
            </LinearLayout>
            
        </FrameLayout>
    </LinearLayout>
</TabHost>
